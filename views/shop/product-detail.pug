extends ../layouts/main-layout.pug


block content   
    .row
        .col-md-4
            img(src=`/img/${product.imageUrl}` width='200').img.fluid  
        .col-md-8.pl-4    
                h1 #{product.name}
                hr
                p.mt-0.text-black-50 #{product.description}
                .stats.mt-2
            
            
                .d-flex.justify-content-between.total.font-weight-bold.mt-4
                
                p  #{product.price} 
                    i.fa.fa-try
                button(type="submin").btn.btn-primary.btn-lg.mt-1 Add to Cart

  
      
        

                                
                   
