extends ../layouts/main-layout.pug


block content
        if(action !== 'undefined' && action ==='edit')
            div.alert.alert-success.text-center '#{updatedId}' The product has been updated.
        if(action !== 'undefined' && action ==='delete')
            div.alert.alert-danger.text-center '#{deletedId}' The product has been deleted.
        .row 
        if products.length > 0
            table.table.table-bordered 
                thead 
                    tr 
                        th(style="width:100px;") Image
                        th Product
                        th(style="width:150px;") Price
                        th(style="width:133px;")
                tbody
                    each product in products
                   
                        tr(bgcolor=(`${updatedId}`===product.id)?'#ddd':'#eee') 
                            td 
                                img(src=`/img/${product.imageUrl}` width='80')
                            td 
                                p #{product.name}    
                            td    
                               p #{product.price} TL
                            td  
                              

                                form(action='/admin/delete-product' method='POST')
                                    a.btn.btn-primary.btn-sm(href=`/admin/edit-product/${product.id}`) Edit
                                    input(type='hidden' name='productId' value=`${product.id}`)
                                    button(type='submit').btn.btn-danger.btn-sm Delete

        else 
            h1 No Products
      
        

                                
                   
