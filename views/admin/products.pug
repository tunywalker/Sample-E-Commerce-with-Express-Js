extends ../layouts/main-layout.pug


block content
        if(action !== 'undefined' && action ==='edit')
            div.alert.alert-success.text-center '#{updatedId}' The product has been updated.
        .row 
        if products.length > 0
            table.table.table-bordered 
                thead 
                    tr 
                        th Image
                        th Product
                        th Price
                        th
                tbody
                    each product in products
                   
                        tr(bgcolor=(`${updatedId}`===product.id)?'#ddd':'#eee') 
                            td 
                                img(src=`/img/${product.imageUrl}` width='80')
                            td 
                                p #{product.name}    
                            td    
                               p #{product.price} TL
                            td  
                                a.btn.btn-primary.btn-sm(href=`/admin/edit-product/${product.id}`) Edit

        else 
            h1 No Products
      
        

                                
                   
